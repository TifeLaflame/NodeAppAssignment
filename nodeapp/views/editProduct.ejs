<%- include('partials/header'); -%>

    <h1>
        <%= title %>
    </h1>
    <!-- Edit a Product -->
    <div class="container">
        <% if (message) { %>
            <p class="text-center text-danger"><%= message %></p>
        <% } %>
    
        <% if (product) { %>
            <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                <div class="form-row">
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="strName" id="strName" placeholder="product name" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="nPrice" id="nPrice" placeholder="product price" required>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" name="strDescription" id="strDescription" placeholder="product details" required>
                    </div>
                </div>
                <button type="submit" class="btn btn-success float-right">Update Product</button>
            </form>
        <% } else { %>
            <p class="text-center">Product Not Found. Click <a href="/add">here</a> to add new products.</p>
        <% } %>
    </div>
    </div>
    </body>
    </html>